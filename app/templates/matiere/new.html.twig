{% extends 'base.html.twig' %}

{% block title %}Nouvelle matière{% endblock %}

{% block body %}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h1>Créer une nouvelle matière</h1>
                </div>
                <div class="card-body">
                    {{ form_start(form) }}
                        {{ form_widget(form) }}
                        <div class="d-flex gap-2 mt-3">
                            <button type="submit" class="btn btn-primary">Créer</button>
                            <a href="{{ path('app_matiere_index') }}" class="btn btn-secondary">Annuler</a>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}